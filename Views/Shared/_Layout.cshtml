<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Amazon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UPC_DropDown.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#" style="font-weight: bold; font-size: 2.0em; font-family: 'Times New Roman', Times, serif; text-decoration: none; color:burlywood; margin-inline-start:2%">Amazon</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto" style="margin-left:4%">
                        <li class="nav-item active">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Dashboard">Home </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="User" asp-action="UsersList">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Product" asp-action="ProductsList">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Category" asp-action="CategoriesList">Categories</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Charts" asp-action="ChartsList">Charts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Order" asp-action="OrderList">Orders</a>
                        </li>
                        <li class="nav-item" style="margin-left:100%">
                            <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="btn btn-danger">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black">
        <div class="container text-white" >
            &copy; 2024 - Amazon - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
