@model List<User>
<a href="@Url.Action("ExportToExcel", "User")" class="btn btn-success mb-3">Download as Excel</a>
<table class="table table-hover table-striped" style="border: 1px solid #000;">
    <thead class="bg-info">
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>UserPassword</th>
            <th>UserEmail</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.UserName</td>
                <td>@user.UserPassword</td>
                <td>@user.UserEmail</td>
                <td>@user.Salary</td>
            </tr>
        }
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4">No users found.</td>
            </tr>
        }
    </tbody>
</table>
